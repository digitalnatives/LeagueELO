<h1>Leaderboard</h1>

<table>
  <thead>
    <th>Position</th>
    <th>Name</th>
    <th>Points</th>
  </thead>
  <tbody>
  <% @players.each_with_index do |player, index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= link_to player.name, player %></td>
      <td><%= player.point.to_i %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<h1>Recent matches</h1>

<table>
  <thead>
    <th>Team A</th>
    <th></th>
    <th>Team B</th>
    <th>Date</th>
  </thead>
  <tbody>
  <% @matches.each do |match| %>
    <tr>
      <td><%= match.team_a_players.map(&:name).join(', ') %></td>
      <td><%= match.score_a %> - <%= match.score_b %></td>
      <td><%= match.team_b_players.map(&:name).join(', ') %></td>
      <td><%= match.updated_at.to_formatted_s(:short) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
